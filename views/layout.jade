html
  head
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header.Major
      a(href="/")
        img(src='https://lh3.googleusercontent.com/-t0kUj9NNNbw/Vr5j6__MHdI/AAAAAAAAIVM/YutpwEvKILI/w776-h605-no/tnfs-blk.png' width='200px' style='display: block; margin-left: auto; margin-right: auto;')
      .navigation
        a(href="/about") About
        a(href="/contributors") Contributors
        a.page-link(href='https://soundcloud.com/that-never-fading-smile', target='_blank')
          i.fa.fa-soundcloud
        p A weekly handpicked mixtape curated by music lovers, for music lovers
    #main
      block content
    .stickyControls
      .playButtonContainer
        button.flex-none.h3.action-button.button-narrow.button-transparent.button-grow.rounded(title='Play Previous Track')
          svg.icon.geomicon.secondaryIcons(data-icon='previous', style='fill:currentcolor', viewbox='0 0 32 32')
            path(d='M4 4 H8 V14 L28 4 V28 L8 18 V28 H4 z')
        button.flex-none.h1.action-button.button-transparent.button-grow.rounded(title='Play/Pause')
          // ngIf: player.playing !== track.src
          svg.icon.geomicon(data-icon='play', style='fill:currentcolor', viewbox='0 0 32 32')
            path(d='M4 4 L28 16 L4 28 z')
          // end ngIf: player.playing !== track.src
          // ngIf: player.playing === track.src
        button.flex-none.h3.action-button.mr2.button-narrow.button-transparent.button-grow.rounded(title='Play Next Track')
          svg.icon.geomicon.secondaryIcons(data-icon='next', style='fill:currentcolor', viewbox='0 0 32 32')
            path(d='M4 4 L24 14 V4 H28 V28 H24 V18 L4 28 z')
      .progressContainer
        progress.progress(value='0') NaN
    footer.site-footer
      p.small
        | Made with
        i.fa.fa-heart.fa-lg
        |  For Lev - That Never Fading Smile
  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js")
  script(src="bower/underscore/underscore-min.js")
  script(src="bower/underscore-db/dist/underscore-db.min.js")
  script(src="/js/app.js")
